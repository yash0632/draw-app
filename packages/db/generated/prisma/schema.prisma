generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  hashPassword String
  createdAt    DateTime @default(now())
}

model Rooms {
  id       Int    @id @unique @default(autoincrement())
  roomName String
  ownerId  Int
}
